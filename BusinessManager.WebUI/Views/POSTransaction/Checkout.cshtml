            <div class="form-group d-none" style="display: none">
                <div>
                    @Html.Hidden("CustomerId")
                </div>
            </div>

            <div class="form-group" style="@inputGroupStyle">
                @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label " + @labelWidth })
