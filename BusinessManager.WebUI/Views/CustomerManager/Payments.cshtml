@model IEnumerable<BusinessManager.Core.Models.Payment>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <script type="text/javascript">
        /////////////////////////////////////////////////////////////////////////////////////////////

        function setPaymentMode(event) {
            var btn = event.target;
            var tableRow = getParent(btn, "tr");
            var optSelected = btn.title;

            var paymentModeInput = tableRow.querySelector("[name='PaymentMode']");
            paymentModeInput.value = optSelected;

            var creditcardGrp = tableRow.querySelector("[id='creditcard-group']");
            var checkGrp = tableRow.querySelector("[id='check-group']");

            switch (optSelected) {
                case "credit card":
                    creditcardGrp.classList.remove("hidden");
                    checkGrp.classList.add("hidden");
                    break;
                case "check":
                    creditcardGrp.classList.add("hidden");
                    checkGrp.classList.remove("hidden");
                    break;
                default:
                    creditcardGrp.classList.add("hidden");
                    checkGrp.classList.add("hidden");
                    return;
            }
            showPaymentSaveBtn(event);
        }

        /////////////////////////////////////////////////////////////////////////////////////////////

        function validatePaymentInput(payment) {
            var message = "";
            if (!payment.PaymentDate)
                message = "<p>'Payment Date' cannot be empty.</p>";

            if (isNaN(payment.Amount) || payment.Amount === "" || parseFloat(payment.Amount) <= 0) {
                message += "<p>'Amount' must be a number and greater than zero.</p>";
            }

            if (payment.PaymentMode === "credit card") {
                if (!(payment.CreditCardHolder.trim())) {
                    message += "<p>'Card Holder' cannot be empty.</p>";
                }
                if (!(payment.CreditCardNo.trim())) {
                    message += "<p>'Card Number' cannot be empty.</p>";
                }

                if (isNaN(payment.CreditCardExpMonth) || payment.CreditCardExpMonth === "" || parseInt(payment.CreditCardExpMonth) <= 0) {
                    message += "<p>'Exp Month' must be greater than zero.</p>";
                }

                if (isNaN(payment.CreditCardExpYear) || payment.CreditCardExpYear === "" || parseInt(payment.CreditCardExpYear) <= 0) {
                    message += "<p>'Exp Year' must be greater than zero.</p>";
                }

                if (!(payment.CreditCardCVV.trim())) {
                    message += "<p>'Verification Code' cannot be empty.</p>";
                }

                if (!(payment.CreditCardName.trim())) {
                    message += "<p>'Card Name' cannot be empty.</p>";
                }
            }
            else if (payment.PaymentMode === "check") {
                if (!(payment.CheckNo.trim())) {
                    message += "<p>'Check Number' cannot be empty.</p>";
                }
                if (!(payment.CheckWriter.trim())) {
                    message += "<p>'Issued By' cannot be empty.</p>";
                }
            }
            return message;
        }

        /////////////////////////////////////////////////////////////////////////////////////////////

        function showPaymentSaveBtn(event) {
            var tableRow = getParent(event.target, "tr");
            var btn = tableRow.querySelector("[name='save-payment']");
            btn.classList.remove("hidden");
        }

        /////////////////////////////////////////////////////////////////////////////////////////////

        function clearNewPaymentInput(tableRow) {
            tableRow.querySelector("[name='PaymentDate']").value = "";
            tableRow.querySelector("[name='Amount']").value = 0;
            tableRow.querySelector("[name='PaymentMode']").value = "cash";
            tableRow.querySelector("[name='CheckNo']").value = "";
            tableRow.querySelector("[name='CheckWriter']").value = "";
            tableRow.querySelector("[name='CheckImage']").value = "";
            tableRow.querySelector("[name='CreditCardHolder']").value = "";
            tableRow.querySelector("[name='CreditCardExpMonth']").value = 0;
            tableRow.querySelector("[name='CreditCardExpYear']").value = 0;
            tableRow.querySelector("[name='CreditCardCVV']").value = "";
            tableRow.querySelector("[name='CreditCardNo']").value = "";
            tableRow.querySelector("[name='CreditCardName']").value = "";
        }

        /////////////////////////////////////////////////////////////////////////////////////////////
    </script>

    var paymentCount = Model.Count();
    var paymentIndex = 0;
    var rowElementId = "";
    string rowClass = "";

    <h4 style="margin-left: 5px">Invoice Payments</h4>
    <table id="payments-table" class="table" style="background-color: #fffcf0"> @* #fffcf0 = yellow 3 *@
        @foreach (var payment in Model)
        {
            ++paymentIndex;
            rowElementId = "row-" + ViewBag.InvoiceIndex + "-" + paymentIndex;
            rowClass = paymentIndex == 1 ? "col-md-6" : "col-md-6 hidden";
            <tr id=@rowElementId class="@rowClass" style="width: 100%">
                <td class="col-md-8">
                    <div id="payment-record-form" class="form-group">
                        <div class="form-group form-group-payment" style="margin-bottom: 5px">
                            <p class="edit-payment-label" style="margin-bottom: 2px; margin-left: 4px">Payment Date</p>
                            <div>
                                <input name="PaymentDate"
                                       type="date"
                                       class="form-control input-sm date-input"
                                       style="margin-left: 2px"
                                       onchange="showPaymentSaveBtn(event)" />
                            </div>
                        </div>

                        <div class="form-group form-group-payment">
                            <p class="edit-payment-label">Amount</p>
                            <div>
                                <input name="Amount"
                                       type="text"
                                       class="form-control input-sm edit-payment-input"
                                       onkeyup="showPaymentSaveBtn(event)"
                                       onchange="showPaymentSaveBtn(event)" />
                            </div>
                        </div>

                        <div id="payment-mode-group" class="form-group" style="margin-left: -30px">
                            <div class="hidden">
                                <input name="PaymentMode" readonly type="text" value="cash" class="form-control input-sm edit-payment-input" />
                            </div>

                            <div style="margin-top: 0">
                                <div>
                                    <p class="edit-payment-label" style="margin-left: 32px">Payment Mode</p>
                                </div>
                                <div class="border border-gray" style="width: 70%; margin-left: 40px; padding: 2px 0 10px 0">
                                    <label class="radio" style="padding-left: 40px">
                                        <input type="radio" name="optradio" checked title="cash" onclick="setPaymentMode(event)">Cash
                                    </label>
                                    <label class="radio" style="padding-left: 40px">
                                        <input type="radio" name="optradio" title="credit card" onclick="setPaymentMode(event)">Credit/Debit Card
                                    </label>
                                    <label class="radio" style="padding-left: 40px">
                                        <input type="radio" name="optradio" title="check" onclick="setPaymentMode(event)">Check
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div id="creditcard-group" class="hidden" style="transform: translateY(-px)">
                            <div class="form-group form-group-payment">
                                <p class="edit-payment-label">Card Holder</p>
                                <div>
                                    <input name="CreditCardHolder"
                                           type="text"
                                           class="form-control input-sm edit-payment-input"
                                           onkeyup="showPaymentSaveBtn(event)"
                                           onchange="showPaymentSaveBtn(event)" />
                                </div>
                            </div>

                            <div class="form-group form-group-payment">
                                <p class="edit-payment-label">Card Name</p>
                                <div>
                                    <input name="CreditCardName"
                                           type="text"
                                           class="form-control input-sm edit-payment-input"
                                           onkeyup="showPaymentSaveBtn(event)"
                                           onchange="showPaymentSaveBtn(event)" />
                                </div>
                            </div>

                            <div class="form-group form-group-payment">
                                <p class="edit-payment-label">Card Number</p>
                                <div>
                                    <input name="CreditCardNo"
                                           type="text"
                                           class="form-control input-sm edit-payment-input"
                                           onkeyup="showPaymentSaveBtn(event)"
                                           onchange="showPaymentSaveBtn(event)" />
                                </div>
                            </div>

                            <div>
                                <div class="form-group form-group-payment">
                                    <div style="width: 25%; display: inline-block; margin-right: 3%; transform: translateY(-26px)">
                                        <p class="edit-payment-label" style="margin-left: 0px">Exp Month</p>
                                        <div>
                                            <input name="CreditCardExpMonth"
                                                   type="number"
                                                   class="form-control input-sm edit-payment-input"
                                                   style="padding-right: 5px; padding-left: 5px"
                                                   onkeyup="showPaymentSaveBtn(event)"
                                                   onchange="showPaymentSaveBtn(event)" />
                                        </div>
                                    </div>
                                    <div style="width: 25%; display: inline-block; margin-right: 3%; transform: translateY(-26px)">
                                        <p class="edit-payment-label" style="margin-left: 0px">Exp Year</p>
                                        <div>
                                            <input name="CreditCardExpYear"
                                                   type="number"
                                                   class="form-control input-sm edit-payment-input"
                                                   style="padding-right: 5px; padding-left: 5px"
                                                   onkeyup="showPaymentSaveBtn(event)"
                                                   onchange="showPaymentSaveBtn(event)" />
                                        </div>
                                    </div>
                                    <div style="width: 30%; display: inline-block">
                                        <p class="edit-payment-label" style="margin-left: 0px">CVV Code</p>
                                        <div style="padding: 0">
                                            <input name="CreditCardCVV"
                                                   type="text"
                                                   class="form-control input-sm edit-payment-input"
                                                   style="width: 80%"
                                                   onkeyup="showPaymentSaveBtn(event)"
                                                   onchange="showPaymentSaveBtn(event)" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div id="check-group" class="hidden">
                            <div class="form-group form-group-payment">
                                <p class="edit-payment-label">Check Number</p>
                                <div>
                                    <input name="CheckNo"
                                           type="text"
                                           class="form-control input-sm edit-payment-input"
                                           onkeyup="showPaymentSaveBtn(event)"
                                           onchange="showPaymentSaveBtn(event)" />
                                </div>
                            </div>

                            <div class="form-group form-group-payment">
                                <p class="edit-payment-label">Issued By</p>
                                <div>
                                    <input name="CheckWriter"
                                           type="text"
                                           class="form-control input-sm edit-payment-input"
                                           onkeyup="showPaymentSaveBtn(event)"
                                           onchange="showPaymentSaveBtn(event)" />
                                </div>
                            </div>

                            <div class="form-group form-group-payment">
                                <p class="edit-payment-label">Check Image</p>
                                <div>
                                    <input name="CheckImage"
                                           type="text"
                                           class="form-control input-sm edit-payment-input"
                                           onchange="showPaymentSaveBtn(event)" />
                                </div>
                            </div>
                        </div>

                        <div class="form-group hidden">
                            <p class="edit-payment-label">Receivable Source</p>
                            <div style="padding-top: 6px">
                                <span name="ReceivableSource"></span>
                            </div>
                        </div>

                        <div class="form-group hidden">
                            <p class="edit-payment-label">Source Id</p>
                            <div style="padding-top: 6px">
                                <span name="ReceivableSourceId"></span>
                            </div>
                        </div>

                        <div class="form-group hidden">
                            <p class="edit-payment-label">Created At</p>
                            <div style="padding-top: 6px">
                                <span name="CreatedAt"></span>
                            </div>
                        </div>

                        <div class="form-group" style="margin:  5px 0 0 0; padding: 0">
                            <div>
                                <button type="button"
                                        name="save-payment"
                                        class="btn btn-sm btn-default btn-success-text margin-bottom-3 hidden"
                                        onclick="saveSubformData(event, 'AddPayment', getPaymentData, clearNewPaymentInput)">
                                    <strong>Save</strong>
                                    <span style="margin-left: 5px" class="glyphicon glyphicon-edit"></span>
                                </button>
                            </div>
                        </div>
                    </div>
                    <span name="payments-table-row-number" class="hidden">@paymentIndex</span>
                </td>
            </tr>
        }
    </table>

    @*  ################### RECORD NAVIGATION BUTTONS #####################  *@

    <div class="form-group text-danger" style="margin: -15px 0 0 0; padding: 0 0 20px 0 ">
        Payment <span name="payments-table-row-number-alt">1</span> of <span name="payments-table-row-count" style="margin: 0 10px 0 0">@paymentCount</span>
        <div style="display: inline">
            <button type="button" class="btn-pill-golden">
                <span class="glyphicon glyphicon-fast-backward"
                      style="padding: 0 3px 0 3px"
                      onclick="navFirst(event, 'payments-table')">
                </span>
            </button>
            <button type="button" class="btn-pill-golden">
                <span class="glyphicon glyphicon-arrow-left"
                      style="padding: 0 3px 0 3px"
                      onclick="navPrev(event, 'payments-table')">
                </span>
            </button>
            <button type="button" class="btn-pill-golden">
                <span class="glyphicon glyphicon-arrow-right"
                      style="padding: 0 3px 0 3px"
                      onclick="navNext(event, 'payments-table')">
                </span>
            </button>
            <button type="button" class="btn-pill-golden">
                <span class="glyphicon glyphicon-fast-forward"
                      style="padding: 0 3px 0 3px"
                      onclick="navLast(event, 'payments-table')">
                </span>
            </button>
        </div>
    </div>
}