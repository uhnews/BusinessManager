@model IEnumerable<BusinessManager.Core.Models.Layaway>

@{
    ViewBag.Title = "Layaways";
    int layawayIndex = 0;
    int layawayCount = Model.Count();
    decimal layawayCharges = 0;
    decimal customerCharges = 0;
}

<table id="layaways-table" class="table">
    @foreach (var layaway in Model)
    {
        ++layawayIndex;
        string rowClass = layawayIndex > 1 ? "hidden" : "table-row-shown";
        layawayCharges = layaway.LayawayItems.Sum(item => item.Quantity * item.Price);
        var layawayChargesStr  = "$ " + String.Format("{0:###,###,###.00}", layawayCharges);
        customerCharges += layawayCharges;
        var customerChargesStr = String.Format("$ {0:#,###.00}", customerCharges);
        <tr class="@rowClass">
            <td>
                <div class="col-md-12" style="display: flex; height: 625px">
                    @{
                        var colorLightBlue = "#f6fbfd";

                        // Layaway Items table styling strings
                        var inputStyle = "display: inline; width: 45%; max-width: 100%";
                        var inputGroupStyle = "margin: 6px";
                        var buttonGroupStyle = "margin: 6px 6px 30x 6px";
                        var dateStyle = "padding: 5px; line-height: 100%; display: inline; max-width: 45%";
                    }
                    <style>
                        .layaway-label {
                            width: 30%
                        }

                        .fixed-header tbody {
                            display: block;
                            overflow: auto;
                            height: 550px;
                            width: 100%;
                        }

                        .fixed_header thead tr {
                            display: block;
                        }
                    </style>
                    <div id="layaway-edit" class="col-md-6" style="flex: 1; padding: 1em; background-color: @colorLightBlue">
                        <form id="layaway-form">
                            <div name="layaway-customer-id" style="display: none">@layaway.CustomerId</div>
                            <div id="receivable-source-id" name="layaway-id" style="display: none">@layaway.Id</div>
                            <div style="@inputGroupStyle">
                                <label class="control-label layaway-label" style="width: 45%">@Html.DisplayNameFor(m => m.CreatedAt)</label>
                                @Html.DisplayFor(model => layaway.CreatedAt, new { htmlAttributes = new { @class = "form-control" } }).ToString().Replace("-07:00", "")
                            </div>
                            <div style="@inputGroupStyle">
                                <label onclick="focusMatchingInput('layaway_AgreementDate')" 
                                       class="control-label layaway-label" 
                                       style="width: 45%"
                                       >
                                    @Html.DisplayNameFor(model => model.AgreementDate)
                                </label>
                                @{
                                    var testdate = layaway.AgreementDate.ToString("yyyy'-'MM'-'dd");
                                }
                                @Html.EditorFor(model => layaway.AgreementDate, new
                                {
                                    htmlAttributes = new
                                    {
                                        @class = "form-control input-sm",
                                        @style = @dateStyle,
                                        @type = "date",
                                        @onchange = "showSubformSaveBtn(event)"
                                    }
                                })
                            </div>
                            <div style="@inputGroupStyle">
                                <label onclick="focusMatchingInput('layaway_DueDate')" 
                                       class="control-label layaway-label" 
                                       style="width: 45%"
                                       >
                                    @Html.DisplayNameFor(model => model.DueDate)
                                </label>
                                @Html.EditorFor(model => layaway.DueDate, new
                                {
                                    htmlAttributes = new
                                    {
                                        @class = "form-control input-sm",
                                        @style = @dateStyle,
                                        @type = "date",
                                        @onchange = "showSubformSaveBtn(event)"
                                    }
                                })
                            </div>
                            <div style="@inputGroupStyle">
                                <label onclick="focusMatchingInput('layaway_DownPayment')" class="control-label layaway-label" style="width: 45%">@Html.DisplayNameFor(model => model.DownPayment)</label>
                                @Html.EditorFor(model => layaway.DownPayment, new
                                {
                                    htmlAttributes = new
                                    {
                                        @class = "form-control input-sm",
                                        @style = @inputStyle,
                                        @onchange = "showSubformSaveBtn(event)",
                                        @onkeyup = "showSubformSaveBtn(event)"
                                    }
                                })
                            </div>
                            <div style="@inputGroupStyle">
                                <label onclick="focusMatchingInput('layaway_ServiceFee')" class="control-label layaway-label" style="width: 45%">@Html.DisplayNameFor(model => model.ServiceFee)</label>
                                @Html.EditorFor(model => layaway.ServiceFee, new
                                {
                                    htmlAttributes = new
                                    {
                                        @class = "form-control input-sm",
                                        @style = @inputStyle,
                                        @onchange = "showSubformSaveBtn(event)",
                                        @onkeyup = "showSubformSaveBtn(event)"
                                    }
                                })
                            </div>
                            <div style="@inputGroupStyle">
                                <label onclick="focusMatchingInput('layaway_CancellationFee')" class="control-label layaway-label" style="width: 45%">@Html.DisplayNameFor(model => model.CancellationFee)</label>
                                @Html.EditorFor(model => layaway.CancellationFee, new
                                {
                                    htmlAttributes = new
                                    {
                                        @class = "form-control input-sm",
                                        @style = @inputStyle,
                                        @onchange = "showSubformSaveBtn(event)",
                                        @onkeyup = "showSubformSaveBtn(event)"
                                    }
                                })
                            </div>
                            <div style="@inputGroupStyle">
                                <label onclick="focusMatchingInput('layaway_OrderStatus')" class="control-label layaway-label" style="width: 45%">@Html.DisplayNameFor(model => model.OrderStatus)</label>
                                @Html.EditorFor(model => layaway.OrderStatus, new
                                {
                                    htmlAttributes = new
                                    {
                                        @class = "form-control input-sm",
                                        @style = @inputStyle,
                                        @onchange = "showSubformSaveBtn(event)",
                                        @onkeyup = "showSubformSaveBtn(event)"
                                    }
                                })
                            </div>
                            <div name="layaway-summary" style="position: relative; margin: 0px 0px 5px 0px">
                                <hr style="margin:  10px 0 0 0; border-width: 2px" />
                                <h5 style="margin: 10px 0 5px 15px; text-decoration: underline; font-size: 15px">This Layaway </h5>
                                <h4 style="margin: 0px 0 0 40px; font-size: 17px">
                                    <span>Total Charges: </span>
                                    <span name="transaction-charges"
                                          class="pull-right"
                                          style="margin-right: 25px">@layawayChargesStr</span>
                                    </h4>
                                    <h4 style="margin: 3px 0 0 40px; font-size: 17px">
                                        <span>Payments: </span>
                                        <span name="layaway-payments"
                                              class="pull-right"
                                              style="margin-right: 25px">$ 0.00</span>
                                    </h4>

                                    <h5 style="margin: 10px 0 5px 15px; text-decoration: underline; font-size: 15px">All Customer Layaways</h5>
                                    <h4 style="margin: 0px 0 0 40px; font-size: 17px">
                                        <span name="charges-accumulator" class="hidden">@customerChargesStr</span>
                                        <span>Amount Pending:</span>
                                        <span name="all-pending-transaction-charges"
                                              class="pull-right"
                                              style="margin-right: 25px; font-size: 17px"></span>
                                    </h4>
                                    <hr style="margin: 3px 0 10px 0; border-width: 2px" />
                                </div>
                                <div style="@buttonGroupStyle">
                                    <button type="button"
                                            name="subform-save"
                                            class="btn btn-sm btn-default btn-success-text hidden"
                                            onclick="saveSubformData(event, 'UpdateLayaway', getUILayawayData)">
                                        <strong>Save</strong>
                                        <span style="margin-left: 5px" class="glyphicon glyphicon-edit"></span>
                                    </button>
                                    <button type="button"
                                            name="scan-upc"
                                            value="Scan Barcode"
                                            class="btn btn-sm btn-default"
                                            onclick="toggleBarcodeInput(event)">
                                        Scan Barcode
                                    </button>
                                    <button type="button"
                                            value="Add Item"
                                            class="btn btn-sm btn-default"
                                            onclick="openProductLookup(event, '@layaway.Id', 'Layaways')">
                                        Add Item
                                    </button>
                                    @{
                                        if (layaway.LayawayItems.Count == 0)
                                        {
                                            <button type="button"
                                                    value="Delete"
                                                    class="btn btn-sm btn-default btn-danger-text"
                                                    onclick="deleteLayaway(event)">
                                                Delete
                                            </button>
                                        }
                                        else
                                        {
                                            <button type="button"
                                                    value="Delete"
                                                    class="btn btn-sm btn-default btn-danger-text"
                                                    disabled>
                                                Delete
                                            </button>
                                        }
                                    }
                                    <div name="upc-input-container" style="padding: 0" class="hidden">
                                        <span class="fas fa-barcode text-primary" style="font-size: 35px; margin: 3px -15px 0 0; padding: 0">&nbsp;&nbsp;</span>
                                        <input name="upc-input"
                                               type="text"
                                               class="form-control input-sm"
                                               style="display: inline; max-width: 70%; transform: translateY(-8px)"
                                               onkeypress="getProductByUPC(event, '@layaway.Id', 'Layaway')" />
                                    </div>
                                </div>
                            </form>
                    </div>
                    @{
                        var subItemInputStyle1 = "display: inline; max-width: 95%; margin: 0 0 5px 0; background-color: " + colorLightBlue + "; border: none";
                        var subItemInputStyle2 = "display: inline; max-width: 95%; margin: 0 0 5px 0";
                    }
                    <div id="layaway-items-table" class="col-md-6 fixed-header" style="flex: 1; background-color: @colorLightBlue; padding-left: 0">
                        <h4 style="margin-left: 10px">Layaway Items</h4>
                        <table class="table">
                            @{
                                var itemsCount = layaway.LayawayItems.Count;
                                var itemIndex = 0;
                                var rowElementId = "";
                            }
                            @foreach (var item in layaway.LayawayItems)
                            {
                                ++itemIndex;
                                rowElementId = "row-" + layawayIndex + "-" + itemIndex;
                                <tr id=@rowElementId style="margin-top: 20px">
                                    <td style="position: relative">
                                        <div>
                                            <img onclick="popUpProductDetail('@item.ProductId')"
                                                 class="img-thumbnail"
                                                 style="width: 100px; cursor: pointer"
                                                 src="~/Content/ProductImages/@item.Image"
                                                 alt="Image" />
                                        </div>
                                        @* LawayItem delete button here *@
                                        <input id="layaway-item-delete"
                                               type="button"
                                               value="Delete"
                                               style="float: left; margin: 5px"
                                               class="btn btn-sm btn-default btn-danger-text"
                                               onclick="deleteLayawayItem(event, '@item.Id', '@rowElementId', '@item.Image', '@item.ProductName')" />
                                    </td>
                                    <td>
                                        <div style="padding-top: 7px">

                                            @* LayawayItem.Id *@
                                            <div name="layawayitem-item-id" style="display: none">@item.Id</div>
                                            @* LayawayItem.ProductId *@
                                            <div name="layawayitem-product-id" style="display: none">@item.ProductId</div>
                                            @* LayawayItem.Quantity *@
                                            <div name="layawayitem-quantity" style="display: none">@item.Quantity</div>

                                            <strong>
                                                @Html.DisplayFor(m => item.ProductName, new
                                                {
                                                    htmlAttributes = new
                                                    {
                                                        @class = "form-control",
                                                        @style = @subItemInputStyle1,
                                                        @readonly = "true"
                                                    }
                                                })
                                            </strong><br />
                                            @Html.DisplayFor(m => item.ProductDescription, new { htmlAttributes = new { @class = "form-control", @style = @subItemInputStyle2 } })
                                        </div>
                                        <div style="padding-top: 7px; width: 70%">
                                            <label class="control-label layaway-label" style="display: inline; margin-right: 10px">Quantity:</label>
                                            <span name="item-quantity" class="text-primary">
                                                @Html.DisplayFor(m => item.Quantity, new { htmlAttributes = new { @class = "form-control", @style = @subItemInputStyle2 } })
                                            </span>
                                        </div>
                                        <div style="margin-bottom: 5px; width: 70%">
                                            @Html.LabelFor(m => item.Price, htmlAttributes: new
                                            {
                                                @class = "control-label layaway-label",
                                                @style = "display: inline; margin-right: 10px; margin-top: 10px"
                                            })

                                            @Html.EditorFor(m => item.Price, new
                                            {
                                                htmlAttributes = new
                                                {
                                                    @class = "form-control input-sm",
                                                    @style = @subItemInputStyle2,
                                                    @onkeyup = "showLayawayItemSaveBtn(event)",
                                                    @onchange = "showLayawayItemSaveBtn(event)"
                                                }
                                            })
                                            <p name="line-total"><label style="margin-right: 5px">Item Total: </label><span class="text-primary">@(item.Quantity * item.Price)</span></p>
                                            <span name="PriceOldValue" class="hidden">@item.Price</span>
                                            <button name="layaway-item-save"
                                                    type="button"
                                                    style="margin: 0"
                                                    class="btn btn-sm btn-default btn-success-text hidden"
                                                    onclick="updateLayawayItemPrice(event, '@item.Id')">
                                                <strong>Save</strong>
                                                <span style="margin-left: 5px" class="glyphicon glyphicon-edit"></span>
                                            </button>
                                            <div class="text-danger">
                                                <span name="layawayitems-row-number">@itemIndex</span> / <span name="layawayitems-row-count">@itemsCount</span>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
                <div name="layaway-nav-group" class="text-danger" style="position: absolute; left: 25px; bottom: 4px; margin-top: 0">
                    Layaway <span name="layaways-table-row-number">@layawayIndex</span> of <span name="layaways-row-count" style="margin-right: 30px">@layawayCount</span>
                    <div style="display: inline">
                        <button type="button" class="btn-pill" onclick="navFirst(event)">
                            <span class="glyphicon glyphicon-fast-backward" 
                                  style="padding: 0 3px 0 3px" >
                            </span>
                        </button>
                        <button type="button" class="btn-pill" onclick="navPrev(event)">
                            <span class="glyphicon glyphicon-arrow-left" 
                                  style="padding: 0 3px 0 3px" >
                            </span>
                        </button>
                        <button type="button" class="btn-pill" onclick="navNext(event)">
                            <span class="glyphicon glyphicon-arrow-right" 
                                  style="padding: 0 3px 0 3px" >
                            </span>
                        </button>
                        <button type="button" class="btn-pill" onclick="navLast(event)">
                            <span class="glyphicon glyphicon-fast-forward" 
                                  style="padding: 0 3px 0 3px" >
                            </span>
                        </button>
                    </div>
                </div>
            </td>
        </tr>
    }
</table>