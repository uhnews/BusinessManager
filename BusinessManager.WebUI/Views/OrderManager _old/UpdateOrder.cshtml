@model BusinessManager.Core.Models.Order
@{
    ViewBag.Title = "Online Order Management";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <h2>Online Order Management</h2>
    <hr />
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        @{
            string labelWidth = "col-md-3";
            string fieldWidth = "col-md-9";
        }

        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.OrderStatus, htmlAttributes: new { @class = "control-label " + @labelWidth })
                <div class=@fieldWidth>
                    @Html.DropDownListFor(model => model.OrderStatus, new SelectList(ViewBag.StatusList), new { @class = "form-control" });
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.CreatedAt, htmlAttributes: new { @class = "control-label " + @labelWidth })
                <div style="margin-top: 5px" class=@fieldWidth>
                    @Html.DisplayFor(model => model.CreatedAt, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label " + @labelWidth })
                <div style="margin-top: 5px" class=@fieldWidth>
                    @Html.DisplayFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label " + @labelWidth })
                <div style="margin-top: 5px" class=@fieldWidth>
                    @Html.DisplayFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label " + @labelWidth })
                <div style="margin-top: 5px" class=@fieldWidth>
                    @Html.DisplayFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <div class="form-group">
                    @Html.LabelFor(model => model.CompanyName, htmlAttributes: new { @class = "control-label " + @labelWidth })
                    <div style="margin-top: 5px" class=@fieldWidth>
                        @Html.DisplayFor(model => model.CompanyName, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>
                @Html.LabelFor(model => model.Street, htmlAttributes: new { @class = "control-label " + @labelWidth })
                <div style="margin-top: 5px" class=@fieldWidth>
                    @Html.DisplayFor(model => model.Street, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.City, htmlAttributes: new { @class = "control-label " + @labelWidth })
                <div style="margin-top: 5px" class=@fieldWidth>
                    @Html.DisplayFor(model => model.City, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.State, htmlAttributes: new { @class = "control-label " + @labelWidth })
                <div style="margin-top: 5px" class=@fieldWidth>
                    @Html.DisplayFor(model => model.State, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ZipCode, htmlAttributes: new { @class = "control-label " + @labelWidth })
                <div style="margin-top: 5px" class=@fieldWidth>
                    @Html.DisplayFor(model => model.ZipCode, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>

    @Html.Partial("OnlineOrderItems", Model.OnlineOrderItems)
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
